model Server {
  id            String         @id @default(cuid())
  serverName    String
  hostName      String         @unique
  ipAddress     String         @unique
  apiKey        String
  location      String
  controlPanel  ControlPanels
  maxAmount     String?
  status        ServerStatus
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt


  packages      Packages[]     
  @@map("servers")
}

enum ControlPanels {
  CPANEL
  PLESK
  DIRECTADMIN
  CYBERPANEL
}

enum ServerStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
}
